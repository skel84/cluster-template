---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: argocd
  namespace: argocd
  finalizers:
  - resources-finalizer.argocd.argoproj.io
  annotations:
    argocd.argoproj.io/sync-wave: '0'
  labels:
    argocd.argoproj.io/instance: argocd
spec:
  project: home-kubernetes
  sources:
    - repoURL: #{ bootstrap_github_address }#
      path: kubernetes/apps/argocd/argocd
      targetRevision: #{ bootstrap_github_branch|default('main', true) }#
      ref: repo
    - repoURL: ghcr.io/argoproj/argo-helm
      chart: argo-cd
      targetRevision: 7.3.6
      helm:
        releaseName: argocd
        valueFiles:
          - $repo/kubernetes/apps/argocd/argocd/values.sops.yaml
  destination:
    name: in-cluster
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true
    - ServerSideApply=true
