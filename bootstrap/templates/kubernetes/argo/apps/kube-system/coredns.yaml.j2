---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: coredns
  namespace: argo-system
  annotations:
    argocd.argoproj.io/sync-wave: '0'
spec:
  project: home-kubernetes
  sources:
    - repoURL: #{ bootstrap_github_address }#
      path: kubernetes/apps/kube-system/coredns
      targetRevision: #{ bootstrap_github_branch|default('main', true) }#
      ref: repo
    - repoURL: https://coredns.github.io/helm
      chart: coredns
      targetRevision: 1.36.1
      helm:
        releaseName: coredns
        valueFiles:
          - $repo/kubernetes/apps/kube-system/coredns/values.yaml
  destination:
    name: in-cluster
    namespace: kube-system
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
    - CreateNamespace=true
