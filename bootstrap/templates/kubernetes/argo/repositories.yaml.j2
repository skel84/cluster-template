---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: repositories
  namespace: argocd
spec:
  project: default
  source:
    repoURL: "#{ bootstrap_github_address }#"
    path: kubernetes/argo/repositories
    targetRevision: "#{ bootstrap_github_branch }#"
    directory:
      recurse: true
  destination:
    name: in-cluster
    namespace: argocd
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
      - RespectIgnoreDifferences=true
  ignoreDifferences:
    - group: argoproj.io
      kind: Application
      jsonPointers:
        - /spec/syncPolicy
